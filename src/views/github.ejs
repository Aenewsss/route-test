<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Walkr Github</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
</head>

<body>
    <h1 class="text-center mt-5">Walkr Github</h1>

    <section class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <% if (github.length> 0) { %>
                <% github.forEach(git=> { %>
                    <div class="col-md-4 border-success rounded mt-4 ms-2 me-2 text-white bg-dark">
                        <span>
                            Título: <%= git.title %>
                            <br>
                            Responsável pelo PR: <%= git.user %>
                            <br>
                            <a href="<%= git.url %>">Acessar PR</a>
                            <br>
                            Status: <%= git.state %>
                            <br>
                            Body do PR: <%= git.body %>
                            <br>
                            Repositório: <%= git.user_repo %>
                            <br>
                            Organização: <%= git.organization %>
                            <br>
                            Criado em: <%= git.created_at %>
                            <br>
                            Atualizado em: <%= git.updated_at %>
                            <br>
                            Branch : <%= git.branch_head %>
                            <br>
                            Branch : <%= git.branch_base %>
                            <br>
                            Nome: <%= git.name %>
                            <br>
                            Linguagem utilizada: <%= git.language %>
                            <br>
                            Número do PR: <%= git.number %>
                        </span>
                    </div>
                    <% }) %>
                        <% } %>
        </div>

    </section>
</body>

</html>